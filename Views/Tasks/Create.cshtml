@model AuthApp.Models.Tasks

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="card card-plain">
        <div class="card-header card-header-success">
            <h4 class="card-title mt-0">Create new task</h4>
            <p>Please fill in the details below</p>
        </div>
        <div class="card-body">
                <div class="col-md-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="TaskPriority" class="control-label"></label>
                            <input asp-for="TaskPriority" class="form-control" />
                            <span asp-validation-for="TaskPriority" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TaskModule" class="control-label"></label>
                            <input asp-for="TaskModule" class="form-control" />
                            <span asp-validation-for="TaskModule" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TaskDocumentName" class="control-label"></label>
                            <input asp-for="TaskDocumentName" class="form-control" />
                            <span asp-validation-for="TaskDocumentName" class="text-danger"></span>
                        </div>
                        <hr />
                        <div class="form-group">
                            <a class="btn btn-warning" asp-action="Index">Back to List</a>
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
