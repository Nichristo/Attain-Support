@model AuthApp.Models.Tasks

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <div class="col-md-12">
        <div class="card card-plain">
            <div class="card-header card-header-success">
                <h4 class="card-title mt-0">Task Details</h4>
                <p>@Html.DisplayFor(model => model.TaskDescription)</p>
            </div>
            <div class="card-body">
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ReferenceNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ReferenceNumber)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TaskModule)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TaskModule)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TaskDocumentName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TaskDocumentName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TaskStatus)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TaskStatus)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreatedBy)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CreatedDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreatedDate)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.TaskID">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
